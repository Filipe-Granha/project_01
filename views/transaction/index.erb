<h1>All transactions</h1>


<table>
  <tr>
    <th>Amount</th>
    <th></th>
    <th>Day</th>
    <th></th>
    <th>Merchant</th>
    <th></th>
    <th>Tag</th>
  </tr>
  <% for transaction in @transactions %>
  <tr>
    <td><%= transaction.amount %></td>
    <td>|</td>
    <td><%= transaction.date %></td>
    <td>|</td>
    <td><%= transaction.merchant.name %></td>
    <td>|</td>
    <td><%= transaction.tag.name %></td>
  </tr>
  <% end %>
</table>  